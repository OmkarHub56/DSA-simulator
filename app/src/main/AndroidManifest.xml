<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.myfirstapp.datastructuresandalgorithmsdsasimulator">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_home_screen"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataStructuresAndAlgorithmsDSASimulator"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/appId"/>
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".SortingActivity"
            android:exported="false"
            android:parentActivityName=".OptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ArrayActivity"
            android:exported="false"
            android:parentActivityName=".OptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_circular_queue_demo"
            android:exported="false"
            android:parentActivityName=".OptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OptionActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_normal_queue_demo"
            android:hardwareAccelerated="true"
            android:exported="false"
            android:parentActivityName=".OptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Stack_Demo_Activity"
            android:exported="false"
            android:parentActivityName=".OptionActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>